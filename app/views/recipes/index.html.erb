<br />
<table id="recipes" class="grid_12 alpha omega">
<% @recipes.each_with_index do |recipe, index| %>
  <tr>
    <td>
    <table id="recipe_<%= recipe.id %>" class="recipe">
    <tr>
    <td class="upvote">
      <% if !current_user %>
        <a href="<%= signin_url %>">^</a>
      <% elsif !recipe.voters.include?(current_user.id) %>
        <a href="javascript:void(0);" class="upvote_recipe" id="upvote_<%= "#{recipe.votes}_#{recipe.id}" %>">^</a>
      <% end %>
    </td>
    <td class="num"><%= index + 1 * @page %>. &nbsp;</td>
      <td><a href="<%= recipe.url %>"><%= recipe.title %></a></td>
    </tr>
    <tr>
      <td></td>
      <td></td>
      <td><span class="votes"><%= pluralize(recipe.votes, "vote") %></span> 
        by <%= recipe.username %> | <a href="<%= recipe_url(recipe) %>"><%= recipe.comment_count %> comments</a>
      </td>
    </tr>
  </table>
    </td>
  </tr>
<% end %>
</table>